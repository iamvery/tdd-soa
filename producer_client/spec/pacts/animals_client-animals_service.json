{
  "consumer": {
    "name": "Animals Client"
  },
  "provider": {
    "name": "Animals Service"
  },
  "interactions": [
    {
      "description": "a request to delete a cat",
      "providerState": "a cat exists with ID 123",
      "request": {
        "method": "delete",
        "path": "/cats/123"
      },
      "response": {
        "status": 204,
        "headers": {
        }
      }
    },
    {
      "description": "a request for all cats",
      "providerState": "some cats exist",
      "request": {
        "method": "get",
        "path": "/cats"
      },
      "response": {
        "status": 200,
        "headers": {
        },
        "body": {
          "data": [
            {
              "id": "1",
              "type": "cat",
              "attributes": {
                "name": "Garfield",
                "age": 39
              }
            },
            {
              "id": "2",
              "type": "cat",
              "attributes": {
                "name": "Felix",
                "age": 99
              }
            },
            {
              "id": "3",
              "type": "cat",
              "attributes": {
                "name": "Sylvester",
                "age": 76
              }
            }
          ]
        },
        "matchingRules": {
          "$.body.data[0].id": {
            "match": "type"
          },
          "$.body.data[1].id": {
            "match": "type"
          },
          "$.body.data[2].id": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request to create a cat",
      "request": {
        "method": "post",
        "path": "/cats",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "cat": {
            "name": "Garfield",
            "age": 39
          }
        }
      },
      "response": {
        "status": 201,
        "headers": {
        },
        "body": {
          "data": {
            "id": "1",
            "type": "cat",
            "attributes": {
              "name": "Garfield",
              "age": 39
            }
          }
        },
        "matchingRules": {
          "$.body.data.id": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}